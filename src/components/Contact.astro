<style>
  section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-column: content;
    gap: 2rem;
    margin: 5% 0 5% 0;
    height: fit-content;
  }

  .container-one {
    display: flex;
    flex-direction: column;
    width: 50%;
  }

  .container-two {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    gap: 1.5rem;
    position: relative;

    &::before {
      content: "";
      background: #4eaf4e;
      width: 250px;
      height: 160px;
      position: absolute;
      top: 70%;
      left: -7%;
      z-index: -1;
      border-radius: 1rem;
    }

    :first-child {
      grid-column: 1;
      grid-row: 1 / -1;
    }

    :last-child {
      position: absolute;
      width: 40%;
      z-index: -1;
      right: -8%;
      top: -5%;
    }
  }
</style>
